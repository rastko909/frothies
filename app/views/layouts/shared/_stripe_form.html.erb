<%= form_tag charges_path do %>
<% order_total_integer = @order.total_price * 100 %>
<%= hidden_field_tag :total_price , order_total_integer.to_i %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <%# <label class="amount"> %>
      <%# <span>Amount: <%= @order.total_price %> <%# </span> %>
    <%# </label> %>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Purchase Order"
          data-amount="<%= @order.total_price * 100 %>"
          data-locale="auto"
          data-currency="aud"></script>
<% end %>