<% @order.order_items.each do |item| %>
  <p><strong>Beer:</strong> <%= item.product.title %></p>
  <p><strong>Quantity:</strong>
  <% if item.quantity == 1 %>Single<% end %>
  <% if item.quantity == 6 %>6 Pack<% end %>
  <% if item.quantity == 24 %>Slab<% end %>
  </p>
  <p><strong>Type:</strong> <%= item.product.category %></p>
  <p><strong>ABV:</strong> <%= item.product.abv %></p>
  <p><strong>Price:</strong> $<%= item.product.price * item.quantity %> AUD<p>
  <hr>
<% end %>

<strong>Order Total:</strong> $<%= @order.total_price %> AUD
<hr>
<%= render "layouts/shared/stripe_form" %>