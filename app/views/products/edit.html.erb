<h1>Edit Beer</h1>

<form action="<%= product_path(params[:id]) %>" method="POST" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <% if @product.errors.any? %>
    <div id="error_explanation">
        <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this article from being saved:
        </h2>
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <input type="hidden" name="_method" value="patch" />

    <%= image_tag @product.image_url, style: 'width: 50%;' if @product.image_url.attached? %>

    <br>

    <label>Title</label>
    <input type="text" name="title" value="<%= @product.title %>"/>

    <label>Category</label>
    <input type="text" name="category" value="<%= @product.category %>"/>

    <label>Description</label>
    <textarea rows="4" cols="100" name="description" id="description"><%= @product.description %></textarea><br>
    
    <label>ABV</label>
    <input type="number" step="0.01" name="abv" value="<%= @product.abv %>"/>

    <label>Price</label>
    <input type="number" name="price" value="<%= @product.price %>"/>

    <label>Quantity</label>
    <input type="number" name="quantity" value="<%= @product.quantity %>"/>

    <input type="submit" value="Update" />
</form>