<h1>Products</h1>

<h3>Add New Product</h3>

<form action="<%= products_path %>" method="POST" enctype="multipart/form-data">
  <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <% if @product.errors.any? %>
    <div id="error_explanation">
        <h2>
        <%= pluralize(@restaurant.errors.count, "error") %> prohibited
        this product from being saved:
        </h2>
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

  <label>Beer name</label>
  <input type="text" name="title" />

  <label>Description</label>
  <input type="textarea" name="description" />

  <label>Category</label>
  <input type="text" name="category" />

  <label>ABV</label>
  <input type="number" step="0.01" name="abv" />

  <label>Price</label>
  <input type="text" name="price" />
  
  <label>Quantity</label>
  <input type="number" name="quantity" />
  
  <label>Beer image upload</label>
  <input type="file" name="image_url" accept="image/png, image/jepg" />
  <input id="submit" type="submit" value="Upload" />
</form>